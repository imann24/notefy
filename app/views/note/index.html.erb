<body>
    <div class="container">
        <div class="row">
            <h1 class="col-10">Notes</h1>
            <div class="col-1"><%= link_to 'New', "/"%></div>
        </div>
        <table class="table table-hover">
            <tr>
                <th>Note</th>
                <th>Last Edited</th>
                <th>
            </tr>
            <% @notes.each do |note| %>
                <tr>
                    <td><%= note.title %></td>
                    <td><%= note.updated_at %></td>
                    <td><%= link_to 'Edit', edit_note_path(note) %></td>
                </tr>
            <% end %>
        </table>
    </div>
</body>
